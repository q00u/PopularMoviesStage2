<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.ReviewsFragment">

    <com.example.phoen.popularmovies.utils.OutlineTextView
        android:id="@+id/ReviewsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="320dp"
        android:text="@string/ReviewsCount"
        android:textAppearance="@android:style/TextAppearance.Material.Title"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintStart_toStartOf="parent"
        app:outlineColor="@color/cardview_dark_background"
        tools:text="20 Reviews" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/Reviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ReviewsTitle" />


    <TextView
        android:id="@+id/Spacer"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/Reviews" />

</android.support.constraint.ConstraintLayout>